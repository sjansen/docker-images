#!/bin/bash
set -e

cd $(dirname "$0")
export DEBIAN_FRONTEND=noninteractive

mv datastax.list /etc/apt/sources.list.d/
mv datastax.gpg  /etc/apt/trusted.gpg.d/

apt-get update
apt-get -o Dpkg::Options::='--force-confold' dist-upgrade -y
apt-get install -y 'cassandra=2.1.*' libjna-java

apt-get clean
rm -rf /var/lib/apt/lists/*
rm "$0"
